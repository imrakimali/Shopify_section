{% schema %}
{
  "name": "Image Carousel",
  "settings": [
    {
      "type": "text",
      "id": "carousel_id",
      "label": "Carousel ID",
      "default": "carouselExampleSlidesOnly"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Carousel image"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Image Carousel",
      "category": "Media"
    }
  ]
}
{% endschema %}

<div id="{{ section.settings.carousel_id }}" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    {% for block in section.blocks %}
      <div class="carousel-item {% if forloop.first %}active{% endif %}" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | image_url: width: 1600 }}" 
               alt="{{ block.settings.alt_text | escape }}" 
               class="d-block w-100">
        {% else %}
          <div class="d-block w-100 bg-light text-center p-5">
            No image selected
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
